{
  "manifest_version": 3,

  "name": "My Boxes",
  "description": "This extension will box up all your links and push them off to mybox.es ",
  "version": "1.0",

  "permissions": [
    "tabs",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],

      "exclude_globs": ["chrome-extension://*/*", "chrome-devtools://*/*"],
      "css": ["mystyles.css"],
      "js": ["jquery.min.js", "popup.js"]
    }
  ]
}